{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"],
      "@plugins/*": ["./plugins/*"],
      "@types/*": ["./src/types/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "plugins/**/*"],
  "exclude": ["node_modules", "dist"]
}